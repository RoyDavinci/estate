{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["src", ".eslintrc.js", "source-path/**/*.json", "client"],
  "exclude": ["node_modules", "dist"]
}
